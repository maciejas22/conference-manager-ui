{
  "extends": "@repo/config/typescript/base.json",
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
