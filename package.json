{
  "name": "conference-manager",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "turbo format",
    "prettier-check": "turbo prettier-check",
    "type-check": "turbo run type-check",
    "gen-graph": "turbo run build --graph=graph.pdf",
    "gen-types": "turbo gen-types"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/**"
  ],
  "packageManager": "bun@1.1.3"
}
