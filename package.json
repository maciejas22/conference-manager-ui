{
  "name": "conference-manager-ui",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean && rm -rf node_modules",
    "dev": "turbo dev",
    "format": "turbo format && pnpm syncpack:format",
    "gen-graph": "turbo run build --graph=graph.pdf",
    "gen-schema": "turbo gen-schema",
    "gen-types": "turbo gen-types",
    "lint": "turbo lint",
    "prettier-check": "turbo prettier-check",
    "syncpack:format": "syncpack format",
    "syncpack:list": "syncpack list",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "prettier": "^3.3.2",
    "syncpack": "^12.4.0",
    "turbo": "^2.0.4",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.6.0",
  "workspaces": [
    "apps/*",
    "packages/**"
  ]
}
