{
  "extends": "@repo/config/typescript/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "./src/libs/graphql/schema.graphql",
        "tadaOutputLocation": "./src/libs/graphql/types/graphql-env.d.ts",
        "tadaTurboLocation": "./src/libs/graphql/types/graphql-turbo.d.ts",
        "tadaPersistedLocation": "./src/libs/graphql/types/graphql-persisted.d.ts"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tailwind.config.ts"]
}
