{
  "extends": "@repo/config/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "http://localhost:8080/graphql",
        "tadaOutputLocation": "./src/graphql/types/graphql-env.d.ts",
        "tadaTurboLocation": "./src/graphql/types/graphql-turbo.d.ts",
        "tadaPersistedLocation": "./src/graphql/types/graphql-persisted.d.ts"
      }
    ]
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
