{
  "name": "@repo/conference-management",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "imports": {
    "#actions/*": "./src/actions/*.ts",
    "#components/*": "./src/components/*.tsx",
    "#hooks/*": "./src/hooks/*.ts",
    "#graphql/*": "./src/graphql/*.ts",
    "#services/*": "./src/services/*.ts",
    "#types/*": "./src/types/*.ts",
    "#utils/*": "./src/utils/*.ts"
  },
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "clean": "rm -rf dist",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@internationalized/date": "^3.5.4",
    "@repo/components": "workspace:*",
    "@repo/libs": "workspace:*",
    "@repo/utils": "workspace:*",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^5.0.7",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@iconify/react": "^5.0.1",
    "@repo/config": "workspace:*",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "8",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  }
}
