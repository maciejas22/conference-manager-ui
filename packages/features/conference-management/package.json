{
  "name": "@repo/conference-management",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./styles": "./dist/index.css"
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "clean": "rm -rf dist node_modules",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,cjs,mjs,json,md}\"",
    "lint": "eslint src/",
    "prettier-check": "prettier --check \"src/**/*.{ts,tsx,js,cjs,mjs,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@internationalized/date": "^3.5.4",
    "@repo/components": "workspace:*",
    "@repo/libs": "workspace:*",
    "@repo/utils": "workspace:*",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^5.0.7",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "@iconify/react": "^5.0.1",
    "@repo/config": "^0.0.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.4"
  },
  "imports": {
    "#actions/*": "./src/actions/*.ts",
    "#components/*": "./src/components/*.tsx",
    "#hooks/*": "./src/hooks/*.ts",
    "#graphql/*": "./src/graphql/*.ts",
    "#services/*": "./src/services/*.ts",
    "#types/*": "./src/types/*.ts",
    "#utils/*": "./src/utils/*.ts"
  },
  "sideEffects": [
    "**/*.css"
  ]
}
