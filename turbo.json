{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "ANALYZE",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_UI_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^gen-types", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "gen-schema": {
      "cache": false
    },
    "gen-types": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "prettier-check": {},
    "type-check": {
      "dependsOn": ["^gen-types"]
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
